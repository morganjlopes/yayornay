<div id="question_wrapper">
	<h1 class="text-center"><%= @question.title %></h1>

	<% if @question.description.present? %>
		<div id="info_button">?</div>

		<p>
		  <%= @question.description %>
		</p>
	<% end %>

	<div id="answer_section">
		<div class="btn-group btn-group-justified">
		  <div class="btn-group">
		  	<%= link_to yay_question_votes_path(@question), :id => "yay_btn", :class => "btn btn-default btn-lg" do %>
		  		<%= image_tag "yay_thumb.png" %>
		  	<% end %>
		  </div>
		  <div class="btn-group">
		  	<%= link_to nay_question_votes_path(@question), :id => "nay_btn", :class => "btn btn-default btn-lg" do %>
		  		<%= image_tag "nay_thumb.png" %>
		  	<% end %>
		  </div>
		</div>
	</div>

</div>
