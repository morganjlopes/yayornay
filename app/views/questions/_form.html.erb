<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<div class="form-group">
    	<%= f.input :title, :label => "The Question", input_html: { :class => "form-control"}, :placeholder => "Clear, concise, and to the point." %>
    </div>
    <div id="further_explaination_wrapper" class="form-group">
    	<%= f.input :description, input_html: { :class => "form-control"} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>
